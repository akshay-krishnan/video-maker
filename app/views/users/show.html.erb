<p>
<% if logged_in?%>
  <strong>Welcome to the VideoMaker application, <%= @user[:name] %></strong>
</p>
 <br>
 <br>
<%= form_for @user, url: user_path(@user), method: :post do |f| %>
<%= f.file_field :picture, multiple: true %>
<%= f.submit "Upload"%>
<% end %>

<br>
<td><%= link_to 'logout', logout_path,
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>

<% else %>
  <br>
  <strong>You are not logged in</strong>
  <br>
  <%= link_to 'Login', login_path %>
<% end %>
