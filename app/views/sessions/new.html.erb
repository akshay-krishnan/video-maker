<% if @error_found then%>
<h1> Invalid Credentials! <h1>
<%end%>

<h1><center>Enter your details to sign in</center></h1>

<%= form_with scope: :session, url: login_path, local: true do |form| %>

  <p>
    <%= form.label :name, "Username" %><br>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.label :password, "Choose a password" %><br>
    <%= form.password_field :password %>
  </p>

  <p>
    <%= form.submit "Log in" %>
  </p>
 
<% end %>
<br>
<h2>Dont have an account?</h2><%= link_to 'Sign up', new_user_path%>
